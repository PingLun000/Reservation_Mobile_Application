                        Command="{Binding IncrementOrderCommand}" />
            </Grid>-->

            <StackLayout Grid.Row="3">
                <BoxView />
                <StackLayout Orientation="Horizontal" >
                    <pancake:PancakeView CornerRadius="20,20,20,20"
                                     HorizontalOptions="Center">
                        <Button Text="Confirm "
                            BackgroundColor="LightBlue"    
                            WidthRequest="200" HorizontalOptions="Center"
                            Command="{Binding ConfirmReservationCommand}"
                            HeightRequest="50" />
                    </pancake:PancakeView>

                    <pancake:PancakeView CornerRadius="20,20,20,20"
                                     HorizontalOptions="Center">
                        <Button Text="Denied" BackgroundColor="LightBlue"    
                            WidthRequest="200" HorizontalOptions="Center"
                            Command="{Binding DeniedReservationCommand}"
                            HeightRequest="50" />
                    </pancake:PancakeView>
                </StackLayout>
            </StackLayout>
            
                <Button Text="Go To Home"
                        BackgroundColor="LightSlateGray"    
                        HeightRequest="60"
                       Grid.Row="5"
                        Command="{Binding HomeCommand}" />
           

        </Grid>
    </ContentPage.Content>
</ContentPage>

 
