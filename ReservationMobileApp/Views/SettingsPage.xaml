<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReservationMobileApp.Views.SettingsPage"
             xmlns:vm="clr-namespace:ReservationMobileApp.ViewModels"
             Title="Settings">

    <ContentPage.BindingContext>
        <vm:LogoutViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
        <StackLayout>
            
            <!-- used to upload the catagories that we set in the Helpers.addCatogory once the buttton has been clicked -->
            <Button Text="Manage Categories" x:Name="ButtonCategories"
                    Clicked="ButtonCategories_Clicked" />

            <!-- same function as the first button -->
            <Button Text="Manage Products" x:Name="ButtonProducts"
                    Clicked="ButtonProducts_Clicked" />

            <!-- used to set the cart table property, used by administrator-->
            <Button Text="Manage Cart" x:Name="ButtonCart"
                    Clicked="ButtonCart_Clicked" />

            

                <Button Text="logout"                             
                             Margin="0,0,10,0" HorizontalOptions="CenterAndExpand" VerticalOptions="End"
                             Command="{Binding LogoutCommand}" />
            
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
